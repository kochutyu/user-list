{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "outDir": "./dist",
    "paths": {
      "@src/*": [
        "src/*"
      ],
      "@controllers/*": ["controllers/*"],
      "@services/*": ["services/*"],
      "@directives/*": ["directives/*"],
      "@interfaces/*": [
        "interfaces/*"
      ],
      "@store/*": [
        "store/*"
      ],
      "@enums/*": [
        "enums/*"
      ],
      "@views/*": ["views/*"]
    },
    "typeRoots": ["node_modules/@types"],
    "allowSyntheticDefaultImports": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}